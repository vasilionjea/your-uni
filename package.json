{
  "type": "module",
  "name": "webpack-frontend-template",
  "version": "1.2.1",
  "private": true,
  "description": "A webpack starter template for Frontend projects with typescript",
  "scripts": {
    "start": "webpack serve --env dev --open",
    "format": "prettier --ignore-path .eslintignore --write '**/**/*.{js,ts,tsx}'",
    "lint": "eslint --ignore-path .eslintignore './src/**/*.{js,ts,tsx}'",
    "test": "jest --verbose --watch",
    "test:ci": "jest --verbose --forceExit",
    "preversion": "npm-run-all format lint",
    "postversion": "git push && git push --tags",
    "prod": "webpack --env prod",
    "build": "npm-run-all format lint prod",
    "deploy:github": "gh-pages -d public",
    "deploy": "npm-run-all build deploy:github"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.2",
    "@types/jest": "^29.5.1",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.58.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.3",
    "eslint": "^8.38.0",
    "gh-pages": "^5.0.0",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.5.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "mini-css-extract-plugin": "^2.7.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "sass": "^1.62.0",
    "sass-loader": "^13.2.2",
    "style-loader": "^3.3.2",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.76.2",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.13.3",
    "webpack-merge": "^5.8.0"
  }
}
